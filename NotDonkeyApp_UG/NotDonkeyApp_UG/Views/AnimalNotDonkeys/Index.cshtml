@model IEnumerable<AnimalNotDonkey>
@using NotDonkeyApp_UG.Data;
@{
    ViewData["Title"] = "Index";
}

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
</head>
<body style="background-color:lightblue">
    <h1 style="color:black">Welcome to our animal tinder (づ｡ ◕‿‿◕｡) づ</h1>

    <h2 style="color:dodgerblue">Join us ! </h2> <a class="btn btn-primary" asp-action="Create" asp-controller="AnimalNotDonkeys">Join us</a>
    <br />
    <h2 style="color:dodgerblue">Login ! </h2> <a class="btn btn-primary" asp-action="Login" asp-controller="AnimalNotDonkeys">Login</a>
    <br /><br />

    <br /><br />
    <div ng-app="myApp2" ng-controller="myCtrl2">

        <button class="btn btn-success" ng-click="myFunc()">Check our currently registered users</button>

        <div ng-show="showMe">
            <h1 style="color:black">List of our current animals : </h1>
            <br />
            <table class="table table-bordered" width="100%" style="background-color:lightyellow">
                <tr>
                    <th>avatar</th>
                    <th>Name</th>
                    <th>Breed</th>
                    <th>Sex</th>
                    <th>Weight</th>
                    <th>Additional Description</th>
                </tr>

                @foreach (var animal in Model)
                {
                    string avatarUrl = $"{@StaticDetails.AvatarUrl}{animal.AnimalType}.jpg";
                    <tr>
                        <td width="10%"><img src="@avatarUrl" width="100%" height="70px" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9" /></td>
                        <td>@animal.Name</td>
                        <td>@animal.AnimalType</td>
                        <td>@animal.Sex</td>
                        <td>@animal.Weight</td>
                        <td>@animal.AdditionalDescription</td>
                    </tr>
                }
            </table>
        </div>

    </div>
    <script>
        var app = angular.module('myApp2', []);
        app.controller('myCtrl2', function ($scope) {
            $scope.showMe = false;
            $scope.myFunc = function () {
                $scope.showMe = !$scope.showMe;
            }
        });
    </script>

</body>

